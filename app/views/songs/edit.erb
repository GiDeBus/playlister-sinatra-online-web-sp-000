<h1>Edit Song </h1>
<h2> <%= @song.name %> </h2>

<form action="/songs/<%= @song.slug %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">

    <label for="song_name">Name</label>
    <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>">

    <label for="artist_name"> Artist Name </label>
    <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>">
    </br>

    <label> Genre </label>
    <% Genre.all.each do |genre| %>
        <label for="genre"><%= genre.name %></label>
        <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
    <% end %>

    <input type="submit" value="Save">

</form>